<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.doctoror.particlesdrawable.ParticlesView
        android:id="@+id/idFondoJuego"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        app:dotColor="@android:color/holo_green_light"
        app:frameDelayMillis="10"
        app:lineColor="@android:color/holo_green_light"
        app:lineDistance="86dp"
        app:lineThickness="1dp" />

    <com.juego.alvaros.Juego
        android:id="@+id/idGameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/Blue_Control"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="80dp"
        app:srcCompat="@drawable/controller" />

    <ImageView
        android:id="@+id/Blue_Ball"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="150dp"
        app:srcCompat="@drawable/circulo_azul" />

    <ImageView
        android:id="@+id/Red_Ball"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="150dp"
        app:srcCompat="@drawable/circulo_rojo" />

    <ImageView
        android:id="@+id/Red_Control"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="80dp"
        app:srcCompat="@drawable/controller" />

</RelativeLayout>